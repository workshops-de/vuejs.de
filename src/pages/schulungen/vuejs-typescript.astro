      function updateVisibility() {
        const heroBottom = heroSection.getBoundingClientRect().bottom;
        const shouldShow = heroBottom < 0;

        if (shouldShow) {
          stickyCta.classList.remove('opacity-0', 'translate-y-4', 'pointer-events-none');
